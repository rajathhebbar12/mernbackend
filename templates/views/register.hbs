<div class="container-sm mt-5 justify-content-center shadow-lg bg-light">
<h2 class="text-center fw-bold text-primary bg-light m-4">Registraion</h2>
<div class="container ">
    <form action="/register" method="post">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control mb-3" id="inputBox1" placeholder="First Name" name="firstname" required>
                    <input type="text" class="form-control mb-3"  placeholder="Age" name="age">
                    <select class="form-select form-select mb-3" aria-label=".form-select" name="gender" required>
                        <option value="" hidden>Choose Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                      </select>
                      <input type="password" class="form-control mb-3"  placeholder="Password" name="password"  required>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <input type="text" class="form-control mb-3" id="inputBox2" placeholder="Last Name" name="lastname" required>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="datepicker" placeholder="DD/MM/YYYY" name="dob" required>
                         <div class="input-group-append">  
                            <span class="input-group-text">
                                <i class="bi bi-calendar" ></i>
                            </span>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" id="email" placeholder="Your email" name="email" required>
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                        </div>
                    </div>
                    <input type="password" class="form-control mb-3" id="password" placeholder="Confirm Password" name="confirmpassword" required>
                </div>
            </div>
            <div class="col text-center mb-2">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </div>

